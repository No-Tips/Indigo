<Control
    xmlns="https://spacestation14.io"
    xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls">
    <PanelContainer StyleClasses="BackgroundDark">
        <SplitContainer Orientation="Horizontal" VerticalExpand="True">
            <cc:PlayerListControl Access="Public" Name="ChannelSelector" HorizontalExpand="True" SizeFlagsStretchRatio="1" />
            <BoxContainer Orientation="Vertical" HorizontalExpand="True" SizeFlagsStretchRatio="2">
                <BoxContainer Access="Public" Name="BwoinkArea" VerticalExpand="True" />
                <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
                    <controls:FancyCheckBox Visible="True" Name="PlaySound" Access="Public" Text="{Loc 'admin-bwoink-play-sound'}" Pressed="True" />
                    <Control HorizontalExpand="True" MinWidth="5" />
                    <controls:FancyButton Visible="True" Name="PopOut" Access="Public" Text="{Loc 'admin-logs-pop-out'}" Style="OpenBoth" HorizontalAlignment="Left" />
                    <Control HorizontalExpand="True" />
                    <controls:FancyButton Visible="False" Name="Bans" Text="{Loc 'admin-player-actions-bans'}" Style="OpenRight" />
                    <controls:FancyButton Visible="False" Name="Notes" Text="{Loc 'admin-player-actions-notes'}" Style="OpenBoth" />
                    <controls:FancyButton Visible="False" Name="Kick" Text="{Loc 'admin-player-actions-kick'}" Style="OpenBoth" />
                    <controls:FancyButton Visible="False" Name="Ban" Text="{Loc 'admin-player-actions-ban'}" Style="OpenBoth" />
                    <controls:FancyButton Visible="False" Name="Respawn" Text="{Loc 'admin-player-actions-respawn'}" Style="OpenBoth" />
                    <controls:FancyButton Visible="False" Name="Follow" Text="{Loc 'admin-player-actions-follow'}" Style="OpenLeft" />
                </BoxContainer>
            </BoxContainer>
        </SplitContainer>
    </PanelContainer>
</Control>
