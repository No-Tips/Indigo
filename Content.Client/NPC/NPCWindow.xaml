<controls:FancyWindow xmlns="https://spacestation14.io"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
            Title="NPC debug"
            MinSize="200 200">
    <BoxContainer Name="Options" Orientation="Vertical" Margin="8 8">
        <controls:StripeBack>
            <Label Text="NPC" HorizontalAlignment="Center"/>
        </controls:StripeBack>
        <BoxContainer Name="NPCBox" Orientation="Vertical">
            <controls:FancyCheckBox Name="NPCThonk" Text="Thonk"/>
        </BoxContainer>
        <controls:StripeBack>
            <Label Text="Pathfinder" HorizontalAlignment="Center"/>
        </controls:StripeBack>
        <BoxContainer Name="PathfinderBox" Orientation="Vertical">
            <controls:FancyCheckBox Name="PathCrumbs" Text="Breadcrumbs"/>
            <controls:FancyCheckBox Name="PathPolys" Text="Polygons"/>
            <controls:FancyCheckBox Name="PathNeighbors" Text="Neighbors"/>
            <controls:FancyCheckBox Name="PathRouteCosts" Text="Route costs"/>
            <controls:FancyCheckBox Name="PathRoutes" Text="Routes"/>
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
