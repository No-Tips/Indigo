<ContainerButton xmlns="https://spacestation14.io"
                 xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls">
    <BoxContainer Orientation="Horizontal"
                  SeparationOverride="8">
        <Control MinWidth="24" MinHeight="24">
            <PanelContainer Name="IconPanel" StyleClasses="FancyCheckBoxPanel" />
            <controls:FancyIcon
                Name="GlyphIcon"
                TextStyle="Title3"
                FontWeight="SemiBold"
                VAlign="Center"
                Align="Center" />
        </Control>

        <Label Name="Title" HorizontalExpand="True" />
    </BoxContainer>
</ContainerButton>
