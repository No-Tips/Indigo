<BoxContainer
    xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    MouseFilter="Pass"
    HorizontalExpand="True"
    VerticalExpand="True">
    <BoxContainer Name="Container" HorizontalExpand="True" VerticalExpand="True">
        <ScrollContainer Name="TabScrollContainer" MinSize="42 42" ReserveScrollbarSpace="True" ReturnMeasure="True">
            <BoxContainer Name="TabContainer" />
        </ScrollContainer>

        <ScrollContainer
            Name="ContentScrollContainer"
            HorizontalExpand="True"
            HScrollEnabled="True"
            VerticalExpand="True"
            VScrollEnabled="True"
            ReturnMeasure="True">
            <BoxContainer Name="ContentContainer" HorizontalExpand="True" VerticalExpand="True" Margin="0 8" />
        </ScrollContainer>
    </BoxContainer>
</BoxContainer>
