<ui:GlobalMenu
    xmlns="https://spacestation14.io"
    xmlns:ui="clr-namespace:Content.Client.UserInterface.GlobalMenu.UI">
    <PanelContainer StyleClasses="GlobalMenuPanel" HorizontalExpand="True" MaxHeight="40" MinHeight="40">
        <BoxContainer Margin="4 8" Orientation="Horizontal">
            <BoxContainer Name="MenuContainer"
                          SeparationOverride="4"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"
                          Orientation="Horizontal">
            </BoxContainer>

            <Control HorizontalExpand="True" HorizontalAlignment="Stretch" />

            <BoxContainer Name="StatusContainer"
                          SeparationOverride="4"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Orientation="Horizontal">
            </BoxContainer>
        </BoxContainer>
    </PanelContainer>
</ui:GlobalMenu>
